<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/unsc_alt"
              android:keepScreenOn="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="128px"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/micLayout"
            android:layout_width="128px"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/micButton"
                android:layout_width="108px"
                android:layout_height="108px"
                android:layout_gravity="center"
                android:layout_margin="10px"
                android:background="@drawable/voice_on"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/soundLayout"
            android:layout_width="128px"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/soundButton"
                android:layout_width="108px"
                android:layout_height="108px"
                android:layout_gravity="center"
                android:layout_margin="10px"
                android:background="@drawable/audio_on"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/headLightsLayout"
            android:layout_width="128px"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/headLightsButton"
                android:layout_width="108px"
                android:layout_height="108px"
                android:layout_gravity="center"
                android:layout_margin="10px"
                android:background="@drawable/head_lights"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/coolingLayout"
            android:layout_width="128px"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coolingButton"
                android:layout_width="108px"
                android:layout_height="108px"
                android:layout_gravity="center"
                android:layout_margin="10px"
                android:background="@drawable/cooling_on"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lightsLayout"
            android:layout_width="128px"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lightsButton"
                android:layout_width="108px"
                android:layout_height="108px"
                android:layout_gravity="center"
                android:layout_margin="10px"
                android:background="@drawable/lights_on"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="320px"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="10px">

            <TextView
                android:id="@+id/temp1"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:text="temp 1 n/a"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/temp2"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:text="temp 2 n/a"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/temp3"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:text="temp 3 n/a"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/temp4"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:text="temp 4 n/a"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="320px"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingRight="10px"
            >

            <TextView
                android:id="@+id/batt1"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:text="batt 1 n/a"
                android:textSize="20sp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/batt2"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:text="batt 2 n/a"
                android:textSize="20sp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/batt3"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:text="batt 3 n/a"
                android:textSize="20sp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/batt4"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:text="batt 4 n/a"
                android:textSize="20sp"
                android:gravity="right"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>