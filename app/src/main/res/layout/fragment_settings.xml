<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haloproject.projectspartanv2.SettingsFragment">

    <ListView
        android:layout_width="960px"
        android:layout_height="wrap_content"
        android:id="@+id/btdevices"
        android:layout_alignParentStart="true"
        android:headerDividersEnabled="false"
        android:dividerHeight="20px"
        android:divider="#ff000000"
        android:fastScrollAlwaysVisible="true"
        android:background="@color/HaloDarkBlue" />

    <view
        app:Text="Start Discovery"
        android:layout_width="wrap_content"
        android:layout_height="296px"
        class="com.haloproject.projectspartanv2.view.SettingsButton"
        android:id="@+id/startdiscovery"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btdevices" />

    <view
        class="com.haloproject.projectspartanv2.view.SettingsButton"
        app:Text="Lock Configuration"
        android:layout_width="wrap_content"
        android:layout_height="296px"
        android:id="@+id/lockconfiguration"
        android:layout_below="@+id/startdiscovery"
        android:layout_toEndOf="@+id/btdevices" />

    <view
        class="com.haloproject.projectspartanv2.view.SettingsButton"
        app:Text="Reset Configuration"
        android:layout_width="wrap_content"
        android:layout_height="296px"
        android:id="@+id/deconfgiure"
        android:layout_below="@+id/lockconfiguration"
        android:layout_toEndOf="@+id/btdevices" />

</RelativeLayout>
